@model IEnumerable<CustomCRUDOps.Models.Employee>

@{
    ViewData["Title"] = "Manage Employees";
}

<div>
    <h2>Employees</h2>
    <a class="btn btn-primary mt-3 mb-3" asp-controller="Employee" asp-action="Create">Add Employee</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>DOB</th>
                <th>Email Address</th>
                <th>Home Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DOB</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.HomeAddress</td>
                    <td>
                        <a href="/Employee/Details/@item.Id">
                            <span>Details</span>
                        </a>|
                        <a href="/Employee/Edit/@item.Id">
                            <span>Edit</span>
                        </a>|
                        <a href="/Employee/Delete/@item.Id">
                            <span>Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>