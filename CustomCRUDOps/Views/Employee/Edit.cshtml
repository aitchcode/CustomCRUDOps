@model CustomCRUDOps.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>
<form method="post">
    <input type="hidden" value="@Model.Id" name="id"/>
    <div>
        <label>Name</label>
        <input type="text" class="form-control" value=@Model.Name name="name" required />
    </div>
    <div>
        <label>DOB</label>
        <input type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" asp-for="@Model.DOB" name="dob" required />
    </div>
    <div>
        <label>Email Address</label>
        <input type="email" class="form-control" value="@Model.EmailAddress" name="email" required />
    </div>
    <div>
        <label>Home Address</label>
        <textarea class="form-control" name="address" required>@Model.HomeAddress</textarea>
    </div>
    <input type="submit" value="Update" class="btn btn-primary mt-3" />
</form>